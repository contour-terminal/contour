{
    "version": 6,
    "include": [
        "common.json"
    ],
    "configurePresets": [
        {
            "name": "gcc-debug",
            "displayName": "GCC Debug",
            "inherits": [
                "contour-common",
                "debug"
            ],
            "generator": "Ninja",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_C_COMPILER": "gcc"
            }
        },
        {
            "name": "gcc-release",
            "displayName": "GCC Release",
            "inherits": [
                "contour-common",
                "release"
            ],
            "generator": "Ninja",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_INSTALL_PREFIX": "/usr/local"
            }
        },
        {
            "name": "clang-debug",
            "displayName": "Clang Debug",
            "inherits": [
                "contour-common",
                "debug"
            ],
            "generator": "Ninja",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_C_COMPILER": "clang"
            }
        },
        {
            "name": "clang-release",
            "displayName": "Clang Release",
            "inherits": [
                "contour-common",
                "release"
            ],
            "generator": "Ninja",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_INSTALL_PREFIX": "/usr/local"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "gcc-debug",
            "displayName": "GCC - Debug",
            "configurePreset": "gcc-debug"
        },
        {
            "name": "gcc-release",
            "displayName": "GCC - RelWithDebInfo",
            "configurePreset": "gcc-release"
        },
        {
            "name": "clang-debug",
            "displayName": "Clang - Debug",
            "configurePreset": "clang-debug"
        },
        {
            "name": "clang-release",
            "displayName": "Clang - RelWithDebInfo",
            "configurePreset": "clang-release"
        }
    ],
    "testPresets": [
        {
            "name": "clang-debug",
            "configurePreset": "clang-debug",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        }
    ],
    "packagePresets": [
        {
            "name": "gcc-release",
            "configurePreset": "gcc-release",
            "generators": [
                "DEB"
            ]
        }
    ]
}

