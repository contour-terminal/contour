{
    "version": 6,
    "include": [
        "common.json"
    ],
    "configurePresets": [
        {
            "name": "appleclang-debug",
            "displayName": "Clang Debug",
            "inherits": [
                "contour-common",
                "debug"
            ],
            "generator": "Ninja",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "cacheVariables": {
                "LIBTERMINAL_BUILD_BENCH_HEADLESS": "OFF",
                "CODE_SIGN_CERTIFICATE_ID": "Developer ID Application: Christian Parpart (6T525MU9UR)",
                "CMAKE_PREFIX_PATH": "/opt/homebrew/opt/qt"
            }
        },
        {
            "name": "appleclang-release",
            "displayName": "Clang Release",
            "inherits": [
                "contour-common",
                "release"
            ],
            "generator": "Ninja",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "cacheVariables": {
                "LIBTERMINAL_BUILD_BENCH_HEADLESS": "OFF",
                "CODE_SIGN_CERTIFICATE_ID": "Developer ID Application: Christian Parpart (6T525MU9UR)",
                "CMAKE_PREFIX_PATH": "/opt/homebrew/opt/qt"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "appleclang-debug",
            "displayName": "AppleClang - Debug",
            "configurePreset": "appleclang-debug"
        },
        {
            "name": "appleclang-release",
            "displayName": "AppleClang - Release",
            "configurePreset": "appleclang-release"
        }
    ],
    "testPresets": [
        {
            "name": "appleclang-debug",
            "configurePreset": "appleclang-debug",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        }
    ],
    "packagePresets": [
        {
            "name": "appleclang-release",
            "configurePreset": "appleclang-release",
            "generators": [
                "DragNDrop"
            ]
        }
    ]
}
