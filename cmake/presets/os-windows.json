{
    "version": 6,
    "include": [
        "common.json"
    ],
    "configurePresets": [
        {
            "name": "windows-common",
            "hidden": true,
            "inherits": "contour-common",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-windows",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_SYSTEM_VERSION": "10",
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "LIBTERMINAL_BUILD_BENCH_HEADLESS": "OFF",
                "ENABLE_CCACHE": "ON"
            }
        },
        {
            "name": "msvc-debug",
            "inherits": [
                "windows-common",
                "debug"
            ],
            "displayName": "MSVC Debug",
            "description": "Using MSVC compiler (64-bit)",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl"
            }
        },
        {
            "name": "msvc-release",
            "inherits": [
                "windows-common",
                "release"
            ],
            "displayName": "MSVC Release",
            "description": "Using MSVC compiler (64-bit)",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl"
            }
        },
        {
            "name": "clangcl-debug",
            "inherits": [
                "windows-common",
                "debug"
            ],
            "displayName": "ClangCL Debug",
            "description": "Using ClangCL compiler (64-bit)",
            "toolset": {
                "value": "ClangCL,host=x64",
                "strategy": "external"
            },
            "architecture": {
                "value": "x64",
                "strategy": "external"
            }
        },
        {
            "name": "clangcl-release",
            "inherits": [
                "windows-common",
                "release"
            ],
            "displayName": "ClangCL Release",
            "description": "Using ClangCL compiler (64-bit)",
            "toolset": {
                "value": "ClangCL,host=x64",
                "strategy": "external"
            },
            "architecture": {
                "value": "x64",
                "strategy": "external"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "msvc-debug",
            "displayName": "x64 (MSVC) Debug",
            "configurePreset": "msvc-debug",
            "configuration": "Debug"
        },
        {
            "name": "msvc-release",
            "displayName": "x64 (MSVC) RelWithDebInfo",
            "configurePreset": "msvc-release",
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "clangcl-debug",
            "displayName": "x64 (ClangCL) Debug",
            "configurePreset": "clangcl-debug",
            "configuration": "Debug"
        },
        {
            "name": "clangcl-release",
            "displayName": "x64 (ClangCL) RelWithDebInfo",
            "configurePreset": "clangcl-release",
            "configuration": "RelWithDebInfo"
        }
    ],
    "testPresets": [
        {
            "name": "msvc-debug",
            "configurePreset": "msvc-debug",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        },
        {
            "name": "msvc-release",
            "configurePreset": "msvc-release",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        }
    ],
    "packagePresets": [
        {
            "name": "msvc-release",
            "configurations": [
                "RelWithDebInfo"
            ],
            "configurePreset": "msvc-release"
        },
        {
            "name": "msvc-debug",
            "configurations": [
                "Debug"
            ],
            "configurePreset": "msvc-debug"
        }
    ]
}
